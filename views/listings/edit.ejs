<%= layout("/layouts/boilerplate") %>

<div class="row justify-content-center mt-3">
  <div class="col-lg-8">
    <div class="page-header">
      <div>
        <h2 class="mb-1">
          <i class="fa-solid fa-pen-to-square text-brand me-2"></i>
          Edit property
        </h2>
        <p class="text-muted mb-0">Update your listing details and pricing</p>
      </div>
    </div>

    <div class="card ui-card">
      <div class="card-body p-4">
        <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" enctype="multipart/form-data" novalidate class="needs-validation" data-image-preview>
          
          <div class="mb-4">
            <label class="form-label">
              <i class="fa-solid fa-heading me-1"></i> Title
            </label>
            <input
              name="listing[title]"
              value="<%= listing.title%>"
              type="text"
              class="form-control"
              required
            />
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please add a title for your listing</div>
          </div>

          <div class="mb-4">
            <label class="form-label">
              <i class="fa-solid fa-align-left me-1"></i> Description
            </label>
            <textarea
              name="listing[description]"
              class="form-control"
              rows="4"
              required
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Please add a description</div>
          </div>

          <div class="mb-4">
            <label class="form-label">
              <i class="fa-solid fa-image me-1"></i> Property Image
            </label>
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label text-muted small">Upload new image (optional)</label>
                <input name="listingImage" type="file" class="form-control" id="imageFileInput" accept="image/*" />
              </div>
              <div class="col-md-6">
                <label class="form-label text-muted small">Or update image URL</label>
                <input
                  name="listing[image]"
                  value="<%= listing.image%>"
                  type="text"
                  class="form-control"
                  required
                  id="imageUrlInput"
                />
              </div>
            </div>
            <div class="invalid-feedback">Please provide an image</div>
            <div class="mt-3">
              <img id="imagePreview" class="rounded-3" style="height:220px; width:100%; object-fit:cover; border: 1px solid var(--border);" src="<%= listing.image%>" alt="Preview" />
            </div>
          </div>

          <div class="mb-4">
            <label class="form-label">
              <i class="fa-solid fa-sparkles me-1"></i> Amenities
            </label>
            <input
              name="listing[amenities]"
              value="<%= (listing.amenities || []).join(', ') %>"
              type="text"
              class="form-control"
            />
            <div class="form-text">Separate amenities with commas</div>
          </div>

          <div class="row g-3 mb-4">
            <div class="col-md-4">
              <label class="form-label">
                <i class="fa-solid fa-indian-rupee-sign me-1"></i> Price per night
              </label>
              <input
                name="listing[price]"
                value="<%= listing.price%>"
                type="number"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Please set a price</div>
            </div>
            <div class="col-md-8">
              <label class="form-label">
                <i class="fa-solid fa-globe me-1"></i> Country
              </label>
              <input
                name="listing[country]"
                value="<%= listing.country%>"
                type="text"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Please enter the country</div>
            </div>
          </div>

          <div class="mb-4">
            <label class="form-label">
              <i class="fa-solid fa-location-dot me-1"></i> Location
            </label>
            <input
              name="listing[location]"
              value="<%= listing.location%>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter the location</div>
          </div>

          <div class="d-flex gap-3 pt-2">
            <button class="btn btn-brand btn-lg">
              <i class="fa-solid fa-check me-2"></i> Update Listing
            </button>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary btn-lg">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
